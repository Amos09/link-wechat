<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkwechat.wecom.mapper.WeTagMapper">
    
    <resultMap type="WeTag" id="WeTagResult">
        <result property="id"    column="id"    />
        <result property="groupId"    column="group_id"    />
        <result property="name"    column="name"    />
        <result property="createTime"    column="create_time"    />
        <result property="order"    column="order"    />
    </resultMap>

    <sql id="selectWeTagVo">
        select id, group_id, name, create_time, order from we_tag
    </sql>

    <select id="selectWeTagList" parameterType="WeTag" resultMap="WeTagResult">
        <include refid="selectWeTagVo"/>
        <where>  
            <if test="groupId != null "> and group_id = #{groupId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="order != null "> and order = #{order}</if>
        </where>
    </select>
    
    <select id="selectWeTagById" parameterType="Long" resultMap="WeTagResult">
        <include refid="selectWeTagVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertWeTag" parameterType="WeTag">
        insert into we_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="groupId != null">group_id,</if>
            <if test="name != null">name,</if>
            <if test="createTime != null">create_time,</if>
            <if test="order != null">order,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="groupId != null">#{groupId},</if>
            <if test="name != null">#{name},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="order != null">#{order},</if>
         </trim>
    </insert>

    <update id="updateWeTag" parameterType="WeTag">
        update we_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupId != null">group_id = #{groupId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="order != null">order = #{order},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWeTagById" parameterType="Long">
        delete from we_tag where id = #{id}
    </delete>

    <delete id="deleteWeTagByIds" parameterType="String">
        delete from we_tag where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>