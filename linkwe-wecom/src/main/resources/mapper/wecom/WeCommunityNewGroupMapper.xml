<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkwechat.wecom.mapper.WeCommunityNewGroupMapper">

    <sql id="selectSql">
        SELECT
            new_group_id,
            emple_code_name,
            group_code_id,
            create_by,
            create_time,
            update_by,
            update_time,
            del_flag,
            activity_scene,
            welcome_msg,
            qr_code,
            is_join_confirm_friends,
            media_id,
            join_friend_nums
        FROM
            we_community_new_group
    </sql>
    <update id="batchRemoveWeCommunityNewGroupIds">
        update we_community_new_group set
        del_flag = 1
        where new_group_id in
        <foreach collection="ids" item="id" index="index"
                 separator="," open="(" close=")">
            #{newGroupId}
        </foreach>
    </update>

    <select id="selectWeCommunityNewGroupList"
            resultType="com.linkwechat.wecom.domain.vo.WeCommunityNewGroupVo">
         <include refid="selectSql"/>
         <where>
             emple_code_name LIKE CONCAT("%",#{empleCodeName},"%") AND del_flag = 0
         </where>
    </select>

    <select id="selectWeCommunityNewGroupById"
            resultType="com.linkwechat.wecom.domain.vo.WeCommunityNewGroupVo">
        <include refid="selectSql"/>
        <where>
            new_group_id =#{newGroupId}
        </where>
    </select>

</mapper>